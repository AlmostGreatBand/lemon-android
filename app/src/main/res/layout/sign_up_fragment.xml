<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="247dp"
        android:layout_height="199dp"
        android:src="@drawable/pic_lemon"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/registration_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/lemon_username"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/registration_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/lemon_login"
        android:inputType="textEmailSubject"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/registration_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/lemon_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_button"
        android:text="@string/reg_send"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/registration_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="@string/login_sign_in"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="40dp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoutBtn"
        android:text="@string/profile_title"
        android:textColor="?attr/textPrimary"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/logoutBtn"
        android:background="@drawable/ic_log_out"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <EditText
        android:id="@+id/usernameEdx"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/lemon_username"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/loginEdx"
        app:layout_constraintTop_toBottomOf="@id/usernameEdx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/lemon_login"
        android:inputType="textEmailSubject"
        android:padding="10dp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/passwordEdx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginEdx"
        android:background="@drawable/rounded_corners_text"
        android:hint="@string/profile_change_pass_edx"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:padding="10dp"/>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionPasswordConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordEdx"
        android:layout_marginTop="16dp"
        tools:showPaths="true"
        app:layoutDescription="@xml/fragment_profile_scene_password_conf">
        <EditText
            android:id="@+id/passwordConfEdx"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/rounded_corners_text"
            android:hint="@string/lemon_password_conf"
            android:inputType="textPassword"
            android:padding="10dp" />
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/motionPasswordConf"
        android:layout_marginTop="16dp"
        tools:showPaths="true"
        app:layoutDescription="@xml/fragment_profile_scene_button">
        <Button
            android:id="@+id/updateBtn"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/rounded_corners_button"
            app:layout_constraintTop_toBottomOf="@id/passwordConfEdx"
            app:layout_constraintEnd_toStartOf="parent"
            android:text="@string/profile_update_btn"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:scrollbarStyle="outsideOverlay"
    android:overScrollMode="never"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pic_lemon"/>

        <EditText
            android:id="@+id/usernameEdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_text"
            android:hint="@string/lemon_username"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/loginEdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_text"
            android:hint="@string/lemon_login"
            android:inputType="textEmailSubject"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            />

        <EditText
            android:id="@+id/passwordEdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_text"
            android:hint="@string/lemon_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_button"
            android:text="@string/reg_send"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/reg_log_in"
            android:textColor="?attr/textPrimary"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
</ScrollView>
